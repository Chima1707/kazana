{
  "name": "kazana",
  "description": "A modular data warehouse system",
  "main": "index.js",
  "bin": {
    "kazana": "./bin/server",
    "kazana-services": "./bin/services"
  },
  "scripts": {
    "pretest:ci": "rm -rf node_modules/kazana-integration-test/node_modules/kazana-example/node_modules/kazana && ln -s $(pwd) node_modules/kazana-integration-test/node_modules/kazana-example/node_modules/kazana",
    "start": "./bin/server",
    "test": "semistandard && npm run test:node | tap-spec",
    "test:ci": "( cd node_modules/kazana-integration-test/ ; bin/test-background )",
    "test:coverage": "istanbul cover tests",
    "test:coverage:upload": "istanbul-coveralls",
    "test:node": "node tests",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eHealthAfrica/kazana.git"
  },
  "keywords": [
    "kazana",
    "data",
    "warehouse",
    "transform",
    "audit",
    "export"
  ],
  "author": "eHealth Africa",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/eHealthAfrica/kazana/issues"
  },
  "homepage": "https://github.com/eHealthAfrica/kazana#readme",
  "dependencies": {
    "boom": "^2.8.0",
    "good": "^6.3.0",
    "good-console": "^5.0.2",
    "h2o2": "^4.0.1",
    "hapi": "^9.0.1",
    "hapi-cors-headers": "^1.0.0",
    "hoek": "^2.14.0",
    "inert": "^3.0.1",
    "joi": "^6.6.1",
    "kazana-account": "^1.0.0",
    "kazana-bootstrap": "^1.0.4",
    "kazana-config": "^2.0.0",
    "kazana-raw-data": "^1.1.0",
    "lodash": "^3.10.1",
    "lout": "^6.2.3",
    "minimist": "^1.1.2",
    "pouchdb": "^4.0.0",
    "pouchdb-authentication": "^0.4.1",
    "pouchdb-hoodie-api": "^1.4.0",
    "spawn-pouchdb-server": "^2.1.0",
    "vision": "^2.0.1"
  },
  "devDependencies": {
    "istanbul": "^0.3.17",
    "istanbul-coveralls": "^1.0.3",
    "kazana-integration-test": "latest",
    "semantic-release": "^4.0.3",
    "semistandard": "^7.0.2",
    "tap-spec": "^4.0.2",
    "tape": "^4.0.2"
  }
}
